<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Properties>
    <Property name="LOG_PATTERN">%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} [%X{reqId}] %msg%n</Property>
  </Properties>

  <Appenders>
    <Console name="Console" target="SYSTEM_OUT" follow="true">
      <PatternLayout pattern="${LOG_PATTERN}"/>
    </Console>
  </Appenders>

  <Loggers>
    <!-- Disable the reflection warning -->
    <Logger name="org.apache.logging.log4j.core.util.ReflectionUtil" level="ERROR"/>

    <!-- Reduce graphviz noise -->
    <Logger name="guru.nidi.graphviz.engine" level="ERROR"/>
    <Logger name="guru.nidi.graphviz.engine.CommandLineExecutor" level="ERROR"/>
    <Logger name="guru.nidi.graphviz.engine.GraphvizCmdLineEngine" level="ERROR"/>

    <Root level="info">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>
</Configuration>
